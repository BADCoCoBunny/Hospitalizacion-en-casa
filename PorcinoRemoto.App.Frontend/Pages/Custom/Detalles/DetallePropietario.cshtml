@page
@model DetallePropietarioModel
@{ ViewData["Title"] = "Detalle Propietario"; }
<div class="container">
    <div class="row">
        <!-- Contenedor "Header" -->
        <div class="col-12">
            <a class="btn btn-outline-secondary" asp-page="/Custom/Consultas">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg>
                Consultas
            </a>
        </div>
        <!-- Contenedor info propietario -->
        <div class="col-12 mt-4 p-3 border rounded-3 shadow">
            <div class="row">
                <div class="col-12">
                    <h3>
                        üë§ @Model.propietario.Persona.PrimerNombre
                        @Model.propietario.Persona.SegundoNombre
                        @Model.propietario.Persona.PrimerApellido
                        @Model.propietario.Persona.SegundoApellido
                    </h3>
                </div>
                <div class="col-12"><b>Identificaci√≥n: </b>@Model.propietario.Persona.PersonaID</div>
                <div class="col-12 text-break"><b>Email: </b>@Model.propietario.Email</div>
                <div class="col-12">
                    <b>Direccion: </b>
                    @Model.propietario.Persona.Direccion.Carrera
                    @Model.propietario.Persona.Direccion.Calle
                    @Model.propietario.Persona.Direccion.Numero
                    @Model.propietario.Persona.Direccion.Ciudad
                    @Model.propietario.Persona.Direccion.Departamento
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-6 col-md-5 col-lg-4 col-xl-3">
                    <div class="row">
                        <div class="col-6">
                            <a class="btn btn-warning" asp-page="/Custom/Edits/EditPropietario"
                                asp-route-idPropietario="@Model.propietario.Persona.PersonaID">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path
                                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd"
                                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
                                Editar
                            </a>
                        </div>
                        <div class="col-6">
                            <form method="post">
                                <input type="hidden" asp-for="propietario.PersonaID">
                                <button class="btn btn-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-trash3" viewBox="0 0 16 16">
                                        <path
                                            d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                                    </svg>
                                    Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Contenedor info porcinos -->
        <div class="col-12 mt-4 p-3 border rounded-3 shadow">
            <div class="row">
                <div class="col-12">
                    <h3>üêΩ Porcinos</h3>
                </div>
                <table class="col-12 table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Color</th>
                            <th scope="col">Especie</th>
                            <th scope="col">Raza</th>
                        </tr>
                    </thead>
                    <tbody class="table-striped">
                        @if(Model.propietario.Porcinos.Count() > 0)
                        {
                        foreach (var porcino in Model.propietario.Porcinos)
                        {
                        <tr>
                            <th scope="row">@porcino.PorcinoID</th>
                            <td class="text-nowrap"><a asp-page="/Custom/Detalles/DetallePorcino"
                                    asp-route-idPorcino="@porcino.PorcinoID">@porcino.Nombre</a></td>
                            <td class="text-nowrap">@porcino.Color</td>
                            <td class="text-nowrap">@porcino.Especie</td>
                            <td class="text-nowrap">@porcino.Raza</td>
                        </tr>
                        }
                        } else {
                        <div class="mt-3 alert alert-secondary" role="alert">
                            No hay resultados
                        </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>